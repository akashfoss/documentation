[DOCS]
bears = SpaceConsistencyBear, LineLengthBear

files = **/*.rst, README.rst
ignore = venv/**
ignore_length_regex = ^.*https?://
default_actions = SpaceConsistencyBear: ApplyPatchAction

[commit]
bears = GitCommitBear

[invalidlinks]
enabled = False
files = **/*.rst, README.rst
bears = InvalidLinkBear
